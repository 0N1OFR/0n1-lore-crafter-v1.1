# OpenSea API Key
OPENSEA_API_KEY=your_opensea_api_key_here

# Supabase Configuration  
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_min_32_characters_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_min_32_characters_here

# Development Mode (ONLY works in development environment)
# Set to "true" to bypass wallet signature verification on localhost
# WARNING: Never set this to "true" in production!
AUTH_DEV_MODE=false

# Session Configuration
SESSION_DURATION_HOURS=24
CHALLENGE_EXPIRY_MINUTES=5 